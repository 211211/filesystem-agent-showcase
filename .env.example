# =============================================================================
# Filesystem Agent Showcase - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment.
# See README.md for detailed documentation of each setting.
# =============================================================================

# -----------------------------------------------------------------------------
# Azure OpenAI Configuration (Required)
# -----------------------------------------------------------------------------
# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=your-api-key-here

# Azure OpenAI endpoint URL
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Model deployment name (default: gpt-4o)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# API version to use (default: 2024-02-15-preview)
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# -----------------------------------------------------------------------------
# Data & Sandbox Configuration
# -----------------------------------------------------------------------------
# Root directory for file operations (default: ./data)
DATA_ROOT_PATH=./data

# Enable sandbox security (default: true)
# WARNING: Only disable for testing purposes!
SANDBOX_ENABLED=true

# Command execution timeout in seconds (default: 30)
COMMAND_TIMEOUT=30

# Maximum file size for cat operations in bytes (default: 10MB = 10485760)
MAX_FILE_SIZE=10485760

# Maximum command output size in bytes (default: 1MB = 1048576)
MAX_OUTPUT_SIZE=1048576

# -----------------------------------------------------------------------------
# Parallel Execution Configuration (v2.0)
# -----------------------------------------------------------------------------
# Enable parallel tool execution for improved performance (default: true)
# When enabled, multiple read-only tools (grep, find, cat, ls, etc.) can
# execute concurrently using asyncio.
PARALLEL_EXECUTION=true

# Maximum number of concurrent tool executions (default: 5)
# Higher values may improve throughput but use more system resources.
MAX_CONCURRENT_TOOLS=5

# -----------------------------------------------------------------------------
# Result Caching Configuration (v2.0)
# -----------------------------------------------------------------------------
# Enable caching of tool execution results (default: true)
# Reduces redundant command executions for repeated queries.
CACHE_ENABLED=true

# Cache entry time-to-live in seconds (default: 300 = 5 minutes)
# Entries older than this are automatically invalidated.
CACHE_TTL=300

# Maximum number of entries in the cache (default: 100)
# When exceeded, least-recently-used entries are evicted.
CACHE_MAX_SIZE=100

# -----------------------------------------------------------------------------
# Adaptive File Reading Configuration (v2.0)
# -----------------------------------------------------------------------------
# Size threshold for "small" files in bytes (default: 1MB = 1048576)
# Files smaller than this are read entirely with cat.
SMALL_FILE_THRESHOLD=1048576

# Size threshold for "medium" files in bytes (default: 100MB = 104857600)
# Files between small and medium thresholds use grep when a query is provided.
# Files larger than this use head+tail preview strategy.
MEDIUM_FILE_THRESHOLD=104857600

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Host address to bind the server (default: 0.0.0.0)
HOST=0.0.0.0

# Port number for the server (default: 8000)
PORT=8000

# Enable debug mode with auto-reload (default: false)
# WARNING: Only enable in development environments!
DEBUG=false
